{
  "manifest_version": 3,
  "name": "ChatGPT Panel",
  "version": "1.0.0",
  "description": "Quick access to ChatGPT from any page",
  "permissions": [
    "sidePanel",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_title": "Open ChatGPT Panel",
    "default_icon": {
      "16": "icons/gpt icon.png",
      "48": "icons/gpt icon.png",
      "128": "icons/gpt icon.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["chatgpt-inject.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/gpt icon.png",
    "48": "icons/gpt icon.png",
    "128": "icons/gpt icon.png"
  }
}
